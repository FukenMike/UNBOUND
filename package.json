{
  "name": "unbound-core",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/desktop/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:desktop": "tsc -p tsconfig.desktop.json && tsc -p tsconfig.preload.json",
    "demo": "npm run build && node dist/demo/runDemo.js",
    "test": "npm run build && node dist/tests/runTests.js",
    "assert:demo": "npm run build && node dist/tests/demoAssertions.js",
    "start": "npm run build:desktop && electron .",
    "dev": "npm run build:desktop && electron . --dev"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "@types/node": "^22.10.1",
    "electron": "^28.0.0"
  }
}
